type json <ocaml module="Abs_json"> = abstract



(* type role <ocaml module="Abs_json"> = abstract *)



type agent_config = {
  ?system : string option;
  ?uuid : string option;
  expose : bool;
  ?user : string option;
  ?passwd : string option;
  yaks : string;
  path : string;
  enable_lldp : bool;
  enable_spawner : bool;
  pid_file : string;
  mgmt_interface : string;
  lldp_conf : string;
}

type plugins_conf = {
  plugin_path : string;
  autoload : bool;
  ?auto : string list option;
}


type configuration = {
  agent : agent_config;
  plugins : plugins_conf;
}


type plugin_loader_item = {
  name : string;
  info : string;
}

type eval_result = {
  ?result : json option;
  ?error : int option;
  ?error_msg : string option;
}


type quota_type = {
  max_vcpu : int;
  current_vcpu : int;
  max_vdisk : int;
  current_vdisk : int;
  max_vnetwork : int;
  current_vnetwork: int;
  max_instances : int;
  current_instances: int;
}


type tenant_info = {
  name : string;
  uuid : string;
}

type tenant_config = {
  quotas : quota_type;
  users : string list;
}

type tenant_type = {
  info : tenant_info;
  configuration : tenant_config;
  entities : string list;
  nodes : string list;
  networks : string list;
}


type tenants = {
  tenants:tenant_type list;
}

type user_type = {
  uuid : string;
  name : string;
  access : string;
  role : string;
}

type users = { users : user_type list }

type system_info = {
  name: string;
  uuid: string;
}

type system_config = {
  config : string;
}


type compatible_node_response = {
  uuid : string;
  is_compatible: bool;
}