type net_state = [
  | CREATE
  | CONNECT
  | DISCONNECT
  | DESTROY
]

type fdu = {
  fdu_uuid : string;
  status : fdu_state;
  interfaces : interface list;
  connection_points : connection_point list;
  ?error_code : int option;
}


type interface = {
  vintf_name : string;
  status : net_state;
  ?properties : json option;
}

type connection_point = {
  cp_uuid: string;
  status : net_state;
  ?properties : json option;
}


type virtual_network = {
  uuid : string;
  status: net_state;
  ?properties : json option;
  }





