[unit]
Description = Eclipse fog05 Linux Plugin
After=network.target


[Service]
Type=simple
PIDFile=/var/fos/os/os.pid
ExecStart = /etc/fos/plugins/linux/linux_plugin /etc/fos/plugins/linux/linux_plugin.json
KillMode=process
Restart=on-failure
User=fos
[Install]
WantedBy=multi-user.target
Alias=linuxplugin.Service
