[unit]
Description = Eclipse fog05 -- Eclipse Zenoh



[Service]
Type=simple
PIDFile=/tmp/zenoh.pid
Environment=RUST_LOG=debug
ExecStartPre=/usr/bin/bash -c "/usr/bin/systemctl set-environment ZIP=$( /var/fos/get-zip.sh )"
ExecStart = /usr/bin/zenohd --mem-storage "/fos/**" -l tcp/127.0.0.1:7447 -l unixsock-stream//tmp/zenoh.sock -l tcp/${ZIP}:7447
KillMode=mixed
KillSignal=SIGINT
RestartKillSignal=SIGINT
Restart=on-failure
PermissionsStartOnly=true
User=fos
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=fos-zenoh
[Install]
WantedBy=multi-user.target